<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Principal">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />


    <ImageView
        android:id="@+id/imgPrincipal"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="35dp"
        android:layout_weight="1"
        android:elevation="2dp"
        android:scaleType="fitXY"
        tools:srcCompat="@tools:sample/avatars" />

    <com.codesgood.views.JustifiedTextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="5dp"
        android:text="Dada la secuencia de numeros crear una aplicacion donde carguen los valores en Editext y con un boton se pueda calcular la formular general cuadratica (de acuerdo al orden serÃ¡ a, b, c los numeros), mientras procesa mostrar progresbar" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:text="5, 10, 4" />


    <EditText
        android:id="@+id/txbA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:ems="10"
        android:hint='Valor de "a"'
        android:inputType="numberDecimal"
        android:textAlignment="viewStart"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/txbB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:ems="10"
        android:hint='Valor de "b"'
        android:inputType="numberDecimal"
        android:textAlignment="viewStart"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/txbC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:ems="10"
        android:hint='Valor de "c"'
        android:inputType="numberDecimal"
        android:textAlignment="viewStart"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="35dp"
        android:background="#A184A5"
        android:elevation="2dp"
        android:text="Calcular"
        android:textSize="14sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/pbCargando"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="35dp" />

    <TextView
        android:id="@+id/lblRespuesta1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"
        android:text="Respuesta 1: 0"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblRespuesta2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"
        android:text="Respuesta 2: 0"
        android:textSize="14sp"
        android:textStyle="bold" />

</LinearLayout>